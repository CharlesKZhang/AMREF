<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="accenture.amref.Partners"
    android:background="@color/white">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/partnerTitle"
            android:text="@string/partners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/partnersInfo"
            android:text="@string/partnersInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partnerTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:id="@+id/firstImageRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partnersInfo"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mezzaninelogo"
                android:layout_weight=".4"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/accenturelogo"
                android:layout_weight=".4"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amreflogo"
            android:layout_below="@+id/firstImageRow"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/secondImageRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middle"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/safaricomlogo"
                android:layout_weight=".4"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mpesalogo"
                android:layout_weight=".4"/>

        </LinearLayout>
        <TextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="8dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/secondImageRow"
            android:text="@string/copyright"
            />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
