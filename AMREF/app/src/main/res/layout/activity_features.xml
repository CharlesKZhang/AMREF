<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="accenture.amref.Features">



    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

                <TextView android:id="@+id/featTitle"
                    android:text="@string/help_feat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/feat1"
                    android:text="@string/feature1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/featTitle"

                    />
                <TextView
                    android:id="@+id/feat2"
                    android:text="@string/feature2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feat1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"

                    />

                <TextView
                    android:id="@+id/feat3"
                    android:text="@string/feature3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feat2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:id="@+id/feat4"
                    android:text="@string/feature4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feat3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"

                    />
                <TextView
                    android:id="@+id/feat5"
                    android:text="@string/feature5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/feat4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feat5"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feat1"
                    android:layout_weight=".2"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feat2"
                    android:layout_weight=".2"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feat3"
                    android:layout_weight=".2"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feat4"
                    android:layout_weight=".2"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/feat5"
                    android:layout_weight=".2"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/copyright"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="8dp"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:text="@string/copyright"
                android:layout_below="@+id/footer"
                />
            </RelativeLayout>

        </ScrollView>


</RelativeLayout>
